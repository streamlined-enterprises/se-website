---
// Custom 404 Page
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found | Streamlined Enterprises LLC">
  <Header />
  <main class="min-h-screen flex items-center justify-center pt-16">
    <div class="max-w-lg mx-auto px-4 text-center">
      <h1 class="text-6xl font-bold text-teal-500 mb-4">404</h1>
      <h2 class="text-2xl font-semibold text-slate-100 mb-4">Page Not Found</h2>
      <p class="text-slate-400 mb-8">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-flex items-center justify-center bg-teal-500 hover:bg-teal-400 text-slate-950 font-semibold px-6 py-3 rounded-lg transition-colors"
      >
        Return Home
      </a>
    </div>
  </main>
  <Footer />
</Layout>
